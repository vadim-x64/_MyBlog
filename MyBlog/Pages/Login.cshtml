@page
@model MyBlog.Pages.LoginModel
@{
    ViewData["Title"] = "Увійти";
}

<h2>Увійти</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(TempData["PasswordChanged"] as string))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["PasswordChanged"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="mb-3">
        <label asp-for="LoginForm.Identifier" class="form-label"></label>
        <input asp-for="LoginForm.Identifier" class="form-control" />
        <span asp-validation-for="LoginForm.Identifier" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LoginForm.Password" class="form-label"></label>
        <div class="input-group">
            <input asp-for="LoginForm.Password" class="form-control" type="password" id="passwordInput" />
        </div>
        <div class="form-check mt-2">
            <input class="form-check-input" type="checkbox" id="showPasswordCheckbox" style="cursor: pointer;" />
            <label class="form-check-label user-select-none" for="showPasswordCheckbox" style="cursor: pointer;">
                Показати пароль
            </label>
        </div>
        <span asp-validation-for="LoginForm.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Увійти</button>
    <a asp-page="/Register" class="btn btn-link">Зареєструватися</a>
</form>

@section Scripts {
    <script>
        // Ініціалізація компонентів Bootstrap для роботи кнопки закриття
        document.addEventListener('DOMContentLoaded', function() {
            var alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(function(alert) {
                new bootstrap.Alert(alert);
            });
            
            // Функціонал для показу/приховання пароля
            const passwordInput = document.getElementById('passwordInput');
            const showPasswordCheckbox = document.getElementById('showPasswordCheckbox');
            
            showPasswordCheckbox.addEventListener('change', function() {
                passwordInput.type = this.checked ? 'text' : 'password';
            });
        });
    </script>
}