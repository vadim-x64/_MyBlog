@page
@model MyBlog.Pages.UserManagerModel
@{
ViewData["Title"] = "Керування користувачами";
}

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
<div class="alert alert-success alert-dismissible fade show" role="alert">
    @Model.StatusMessage
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрити"></button>
</div>
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Аватар</th>
            <th>Нікнейм</th>
            <th>ПІБ</th>
            <th>Дата народження</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Статус</th>
            <th>Дії</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.RegularUsers)
        {
        <tr>
            <td>
                @if (user.Avatar != null)
                {
                <div class="avatar-container">
                    <img src="data:image/png;base64,@Convert.ToBase64String(user.Avatar)"
                         class="avatar-image" alt="..." />
                    <form method="post" asp-page-handler="DeleteAvatar" class="position-absolute">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-danger btn-sm avatar-delete-button"
                                title="Видалити аватар" data-bs-toggle="tooltip" data-bs-placement="top">
                            <i class="bi bi-x"></i>
                        </button>
                    </form>
                </div>
                }
                else
                {
                <div class="avatar-placeholder">
                    <span>@user.NickName[0]</span>
                </div>
                }
            </td>
            <td>@user.NickName</td>
            <td>@user.Surname @user.Name @user.LastName</td>
            <td>
                @if(user.BirthDate.HasValue)
                {
                @user.BirthDate.Value.ToString("dd.MM.yyyy")
                }
                else
                {
                <span class="text-muted">Не вказано</span>
                }
            </td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>
                @if (user.IsBlocked)
                {
                <span class="badge bg-danger">Заблоковано</span>
                }
                else
                {
                <span class="badge bg-success">Активний</span>
                }
            </td>
            <td>
                <div class="btn-group">
                    <form method="post" asp-page-handler="ToggleBlock">
                        <input type="hidden" name="userId" value="@user.Id" />
                        @if (user.IsBlocked)
                        {
                        <button type="submit" class="btn btn-success btn-sm">Розблокувати</button>
                        }
                        else
                        {
                        <button type="submit" class="btn btn-warning btn-sm">Заблокувати</button>
                        }
                    </form>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal@(user.Id)">
                        Видалити
                    </button>
                </div>
                
                <div class="modal fade" id="deleteModal@(user.Id)" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Підтвердження видалення</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
                            </div>
                            <div class="modal-body">
                                <p>Ви дійсно хочете видалити користувача <strong>@user.NickName</strong>?</p>
                                <p class="text-danger">Увага! Ця дія є незворотною!</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                                <form method="post" asp-page-handler="DeleteUser">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-danger">Видалити</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>

@if (!Model.RegularUsers.Any())
{
<div class="alert alert-info">
    Немає звичайних користувачів у системі.
</div>
}

@section Scripts {
    <script src="~/js/manager.js"></script>
}