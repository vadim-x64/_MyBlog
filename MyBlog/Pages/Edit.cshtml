@page "{id:guid}"
@model MyBlog.Pages.EditModel
@{
ViewData["Title"] = "Редагування поста";
}

<link rel="stylesheet" href="~/css/create.css">

<div class="container">
    
    <div class="row_create">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Редагування поста</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="PostInput.Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="PostInput.Title" class="form-label">Заголовок</label>
                            <input asp-for="PostInput.Title" class="form-control" />
                            <span asp-validation-for="PostInput.Title" class="text-danger"></span>
                        </div>

                        <div class="card img">
                            <div class="card-header">
                                <h5>Фото для поста</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 img">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="PostInput.UseLocalPhoto" id="useLocalPhoto" value="true" />
                                            <label class="form-check-label" for="useLocalPhoto">Використовувати локальне фото</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="PostInput.UseLocalPhoto" id="useRemotePhoto" value="false" />
                                            <label class="form-check-label" for="useRemotePhoto">Використовувати віддалене фото (URL)</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="local-photo-section">
                                    @if (Model.HasLocalPhoto)
                                    {
                                    <div class="mb-3">
                                        <div class="card">
                                            <div class="card-header">Поточне локальне фото</div>
                                            <div class="card-body text-center">
                                                <img src="data:image/png;base64,@Model.LocalPhotoBase64" class="img-fluid mb-2" style="max-height: 200px;" alt="Поточне фото" />
                                            </div>
                                        </div>
                                    </div>
                                    }

                                    <div class="mb-3">
                                        <label asp-for="Photo" class="form-label">@(Model.HasLocalPhoto ? "Замінити локальне фото" : "Завантажити локальне фото")</label>
                                        <input asp-for="Photo" type="file" class="form-control" accept="image/jpeg,image/jpg,image/png,image/gif,image/bmp,image/jfif" />
                                        <small class="text-muted">Дозволені формати: jpg, jpeg, png, gif, bmp, jfif</small><br>
                                        <span asp-validation-for="Photo" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="remote-photo-section" style="display: none;">
                                    <div class="mb-3">
                                        <label asp-for="PostInput.RemotePhotoUrl" class="form-label">URL фото</label>
                                        <input asp-for="PostInput.RemotePhotoUrl" id="remotePhotoUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                                        <small class="text-muted">Введіть URL-адресу зображення</small> <br>
                                        <span asp-validation-for="PostInput.RemotePhotoUrl" class="text-danger"></span>
                                        
                                        <div class="preview-container">
                                            <img id="imagePreview" class="image-preview" alt="Превью зображення" src="@Model.PostInput.RemotePhotoUrl"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="text-muted small">
                                    <p> <b>Примітка!</b> Якщо ви не виберете фото або URL, або завантажите файл, який не є зображенням, буде використано стандартне зображення.</p>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PostInput.Content" class="form-label">Зміст</label>
                            <textarea asp-for="PostInput.Content" class="form-control" rows="10" maxlength="5000"></textarea>
                            <small class="text-muted"><span id="contentCounter">0</span>/5000</small><br>
                            <span asp-validation-for="PostInput.Content" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="PostInput.IsPrivate" id="isPrivate" />
                                <label class="form-check-label" for="isPrivate">
                                    Приватний пост (не показувати на головній сторінці)
                                </label>
                            </div>
                            <small class="text-muted">Приватні пости будуть доступні тільки через ваш профіль</small>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-primary">Оновити пост</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script src="~/js/edit.js">
    
</script>
}