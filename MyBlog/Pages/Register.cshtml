@page
@model MyBlog.Pages.RegisterModel
@{
    ViewData["Title"] = "Реєстрація";
}

<link rel="stylesheet" href="~/css/register.css">

<h2>Реєстрація</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post" enctype="multipart/form-data">
    <div class="mb-4">
        <label asp-for="RegisterForm.Avatar" class="form-label"></label>
        <input asp-for="RegisterForm.Avatar" class="form-control" type="file"
               accept="image/jpeg,image/png,image/gif,image/bmp,image/jfif"/>
        <span asp-validation-for="RegisterForm.Avatar" class="text-danger"></span>
        <small class="text-muted">Дозволені формати: .jpg, .jpeg, .png, .gif, .bmp, .jfif</small>
    </div>
    
    <div class="mb-4">
        <label asp-for="RegisterForm.Surname" class="form-label"></label>
        <input asp-for="RegisterForm.Surname" class="form-control"/>
        <span asp-validation-for="RegisterForm.Surname" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label asp-for="RegisterForm.Name" class="form-label"></label>
        <input asp-for="RegisterForm.Name" class="form-control"/>
        <span asp-validation-for="RegisterForm.Name" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label asp-for="RegisterForm.LastName" class="form-label"></label>
        <input asp-for="RegisterForm.LastName" class="form-control"/>
        <span asp-validation-for="RegisterForm.LastName" class="text-danger"></span>
    </div>
    
    <div class="mb-4">
        <label asp-for="RegisterForm.NickName" class="form-label"></label>
        <input asp-for="RegisterForm.NickName" class="form-control"/>
        <span asp-validation-for="RegisterForm.NickName" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="RegisterForm.BirthDate" class="form-label"></label>
        <input asp-for="RegisterForm.BirthDate" class="form-control" type="date"
               max="@DateTime.Today.ToString("yyyy-MM-dd")"/>
        <span asp-validation-for="RegisterForm.BirthDate" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="RegisterForm.PhoneNumber" class="form-label"></label>
        <input asp-for="RegisterForm.PhoneNumber" class="form-control"/>
        <span asp-validation-for="RegisterForm.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="RegisterForm.Email" class="form-label"></label>
        <input asp-for="RegisterForm.Email" class="form-control"/>
        <span asp-validation-for="RegisterForm.Email" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="RegisterForm.About" class="form-label"></label>
        <textarea asp-for="RegisterForm.About" class="form-control" rows="3" maxlength="150"
                  placeholder="Розкажіть щось про себе..." id="aboutField"></textarea>
        <div class="d-flex justify-content-between">
            <small id="charCount">0/150</small>
        </div>
        <small class="text-danger d-none" id="pasteWarning">Вставка тексту заборонена! Будь ласка, введіть текст вручну.</small>
        <span asp-validation-for="RegisterForm.About" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="RegisterForm.Password" class="form-label"></label>
        <input asp-for="RegisterForm.Password" class="form-control" type="password" id="passwordInput"/>
        <span asp-validation-for="RegisterForm.Password" class="text-danger"></span>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="showPasswordCheckbox"/>
            <label class="form-check-label" for="showPasswordCheckbox">
                Показати пароль
            </label>
        </div>
    </div>

    <div class="mb-4">
        <label asp-for="RegisterForm.ConfirmPassword" class="form-label"></label>
        <input asp-for="RegisterForm.ConfirmPassword" class="form-control" type="password" id="confirmPasswordInput"/>
        <span asp-validation-for="RegisterForm.ConfirmPassword" class="text-danger"></span>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="showConfirmPasswordCheckbox"/>
            <label class="form-check-label" for="showConfirmPasswordCheckbox">
                Показати пароль
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-outline-success">Зареєструватися</button>
</form>

@section Scripts {
    <script src="~/js/register.js">
        
    </script>
}