@using MyBlog.Services
@inject UserService UserService
@{
    var currentUser = await UserService.GetCurrentUserAsync();
}
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no"/>
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/MyBlog.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/128/14063/14063152.png" type="image/png">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light border-bottom">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="https://cdn-icons-png.flaticon.com/128/14063/14063152.png" alt="...">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex">
                <ul class="navbar-nav ms-auto d-flex align-items-center">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item me-2">
                            <a class="btn btn-secondary d-flex align-items-center" asp-page="/Create">Створити новий пост</a>
                        </li>
                        <li class="nav-item me-2">
                            <a asp-page="/MyPosts" class="btn btn-outline-secondary d-flex align-items-center" >Мої пости</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-page="/Profile" title="Профіль">
                                @if (currentUser?.Avatar != null)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(currentUser.Avatar)" class="rounded-circle" alt="@currentUser.NickName" />
                                }
                                else
                                {
                                    <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center">
                                        <span>@(!string.IsNullOrEmpty(currentUser?.NickName) ? currentUser.NickName[0].ToString() : "U")</span>
                                    </div>
                                }
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Login">Увійти</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main">
        @RenderBody()
    </main>
</div>
<footer class="border-top footer">
    <div class="container">
        &copy; MyBlog. Всі права захищено.
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/comments.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>