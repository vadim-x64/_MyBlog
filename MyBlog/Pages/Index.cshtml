@page
@model IndexModel
@{
    ViewData["Title"] = "Головна сторінка";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-center">Блог</h1>
        </div>
    </div>

    @if (!Model.Posts.Any())
    {
        <div class="alert alert-info text-center">
            Наразі немає жодного посту. Будьте першим, хто поділиться своїми думками!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var post in Model.Posts)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="/Details/@post.Id" class="text-decoration-none text-dark">
                        <div class="card h-100">
                            @if (post.UseLocalPhoto && post.LocalPhoto != null)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(post.LocalPhoto)"
                                     class="card-img-top" style="height: 200px; object-fit: cover;" alt="@post.Title">
                            }
                            else if (!post.UseLocalPhoto && !string.IsNullOrEmpty(post.RemotePhotoUrl))
                            {
                                <img src="@post.RemotePhotoUrl" class="card-img-top"
                                     style="height: 200px; object-fit: cover;" alt="@post.Title"
                                     onerror="this.onerror=null;this.src='';this.alt='Зображення недоступне';this.style.display='none';">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@post.Title</h5>
                                <p class="card-text">@(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)</p>
                            </div>
                            <div class="card-footer bg-white">
                                <div class="d-flex align-items-center">
                                    @if (post.Author.Avatar != null)
                                    {
                                        <img src="data:image/png;base64,@Convert.ToBase64String(post.Author.Avatar)"
                                             class="rounded-circle me-2"
                                             style="width: 30px; height: 30px; object-fit: cover;"
                                             alt="@post.Author.NickName">
                                    }
                                    else
                                    {
                                        <div
                                            class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                            style="width: 30px; height: 30px;">
                                            <span
                                                style="font-size: 16px;">@(!string.IsNullOrEmpty(post.Author.NickName) ? post.Author.NickName[0].ToString() : "U")</span>
                                        </div>
                                    }
                                    <div>
                                        <small class="text-muted">@post.Author.NickName</small>
                                        <br>
                                        <small
                                            class="text-muted">@post.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>