@page
@model MyBlog.Pages.PostManagerModel
@{
    ViewData["Title"] = "Керування постами";
}

<link rel="stylesheet" href="~/css/postmanager.css">

<h1>Керувати постами</h1>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрити"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Пост</th>
                <th>Автор</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model.AllPosts)
            {
                <tr>
                    <td>
                        <a href="#" data-bs-toggle="modal" data-bs-target="#viewPostModal@(post.Id)">@post.Title</a>
                    </td>
                    <td>@post.Author.NickName</td>
                    <td>
                        <div class="action-buttons">
                            <a href="/Details/@post.Id" class="btn btn-info btn-sm">
                                Переглянути на сайті
                            </a>
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deletePostModal@(post.Id)">
                                Видалити
                            </button>
                        </div>
                        <div class="modal fade" id="deletePostModal@(post.Id)" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Підтвердження видалення поста</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Ви дійсно хочете видалити пост "<strong>@post.Title</strong>"?</p>
                                        <p class="text-danger">Ця дія є незворотною!</p>
                                        <p>Всі коментарі до цього поста також будуть видалені.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                                        <form method="post" asp-page-handler="DeletePost">
                                            <input type="hidden" name="postId" value="@post.Id"/>
                                            <button type="submit" class="btn btn-danger">Видалити</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal fade" id="viewPostModal@(post.Id)" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">@post.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <div class="text-muted">
                                                Автор: <strong>@post.Author.NickName</strong> |
                                                Створено: <strong>@post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</strong> |
                                                Оновлено: <strong>@post.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</strong>
                                            </div>
                                        </div>
                                        @if (post.UseLocalPhoto && post.LocalPhoto != null)
                                        {
                                            <div class="text-center">
                                                <img src="data:image/png;base64,@Convert.ToBase64String(post.LocalPhoto)" class="post-image" alt="..."/>
                                            </div>
                                        }
                                        else if (!string.IsNullOrEmpty(post.RemotePhotoUrl))
                                        {
                                            <div class="text-center mb-3">
                                                <img src="@post.RemotePhotoUrl" class="post-image" alt="..."/>
                                            </div>
                                        }
                                        <div class="post-content">
                                            @Html.Raw(post.Content)
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрити</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.AllPosts.Any())
{
    <div class="alert alert-info">
        Немає постів у системі.
    </div>
}

@section Scripts {
    <script src="~/js/manager.js"></script>
}