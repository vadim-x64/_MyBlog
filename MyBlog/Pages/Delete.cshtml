@page "{id:guid}"
@model MyBlog.Pages.DeleteModel
@{
    ViewData["Title"] = "Видалення поста";
}

<link rel="stylesheet" href="~/css/delete.css">

<div class="container delete-page">

    @if (Model.Post == null)
    {
        <div class="alert alert-danger">
            Пост не знайдено або ви не маєте прав для його видалення.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h2 class="text-center">Підтвердження видалення</h2>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <strong>Увага!</strong> Ви впевнені, що хочете видалити "@Model.Post.Title"? Ця дія не може бути скасована.
                        </div>

                        <form method="post">
                            <input type="hidden" asp-for="Post.Id"/>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-danger me-2 mb-2 mb-md-0">Видалити</button>
                                <a asp-page="/MyPosts" asp-route-id="@Model.Post.Id" class="btn btn-outline-secondary">Скасувати</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>